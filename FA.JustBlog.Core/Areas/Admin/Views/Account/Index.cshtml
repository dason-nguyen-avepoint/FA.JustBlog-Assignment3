@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    var index = 1;
}
@if (@ViewBag.Role[0] == "Admin" || @ViewBag.Role[0] == "Contributor")
{
    <p>
        <a asp-action="Create" class="btn btn-success">Create New Account</a>
    </p>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="col">ID</th>
            <th class="col-2">Email</th>
            <th class="col">Full Name</th>
            <th class="col">Age</th>
            <th class="col">Address</th>
            <th class="col-1">Phone Number</th>
            <th class="col">Role</th>
            <th class="col">Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th>@index</th>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.Age</td>
                <th>@user.Address</th>
                <td>@user.PhoneNumber</td>
                <td>@user.Role</td>
                @if (user.EmailConfirmed)
                {
                    <td>
                        <button class="btn btn-success" style="width:120px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg> Permitted
                        </button>
                    </td>

                }
                else
                {
                    <td>
                        <button class="btn btn-danger" style="width:120px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                            </svg> Un-Permitted
                        </button>
                    </td>

                }
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
            index = index + 1;
        }

    </tbody>
</table>
