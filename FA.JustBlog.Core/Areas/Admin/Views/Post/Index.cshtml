@* <partial name="_Notification"/> *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Post" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="col-1">ID</th>
                <th class="col-3">Title</th>
                <th class="col-3">CreatedDate</th>
                <th class="col-2">ViewCount</th>
                <th class="col-3">Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th>@index</th>
                    <td>@obj.Title</td>
                    <th class="text-">@obj.CreatedDate</th>
                    <td class="text-center">@obj.ViewCount</td>
                    <td>@obj.Categories.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-secondary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>

