@model Posts

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="p-4">
    <h1>Create</h1>

    <h4>Posts</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label bold"></label>
                    <textarea id="mytextarea" asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label bold"></label>
                    <input asp-for="CreatedDate" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label bold"></label>
                    <textarea id="mytextarea" asp-for="Content" class="form-control" ></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ViewCount" class="control-label bold"></label>
                    <input asp-for="ViewCount" class="form-control" />
                    <span asp-validation-for="ViewCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label bold"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                @if (@ViewBag.Role[0] == "Contributor")
                {
                    <div class="form-group form-check form-switch" hidden>
                        <label asp-for="isPublised" for="flexSwitchCheckDefault" class="form-check-label bold">IsPublished</label>
                        <input asp-for="isPublised" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    </div>
                }
                else
                {
                    <div class="form-group form-check form-switch">
                        <label asp-for="isPublised" for="flexSwitchCheckDefault" class="form-check-label bold">IsPublished</label>
                        <input asp-for="isPublised" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked>
                    </div>
                }
                <div class="form-group form-check form-switch">
                        @foreach (var item in ViewBag.TagName)
                        {
                            <div class="form-check form-check-inline">
                            <input name ="Tags" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="@item.TagId">
                                <label class="form-check-label" for="inlineCheckbox1">@item.Name</label>
                            </div>
                        }
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" style="width:120px" />
                    <a asp-action="Index" class="btn btn-outline-primary" style="width:120px">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>