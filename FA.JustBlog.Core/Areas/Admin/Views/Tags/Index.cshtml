@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    var index = 1;
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                <a class="th-sm" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TagId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TagId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TagId">Delete</a>
                </td>
            </tr>
            index = index + 1;
        }
    </tbody>
</table>
