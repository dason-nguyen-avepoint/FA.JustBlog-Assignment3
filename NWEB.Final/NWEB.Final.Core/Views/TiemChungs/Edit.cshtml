@model NWEB.Final.Core.Models.TiemChung

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TiemChung</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaTC" />
            <input type="hidden" asp-for="MaCD" />
            <div class="form-group">
                <label asp-for="MaCD" class="control-label"></label>
                <select asp-for="MaCD" class="form-control" asp-items="ViewBag.MaCD" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="MaLieuVX" class="control-label"></label>
                <input asp-for="MaLieuVX" class="form-control" />
                <span asp-validation-for="MaLieuVX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayTiemMui1" class="control-label"></label>
                <input asp-for="NgayTiemMui1" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="NgayDKTienMui2" class="control-label"></label>
                <input asp-for="NgayDKTienMui2" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="NgayTiemMui2" class="control-label"></label>
                <input asp-for="NgayTiemMui2" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option selected>@Model.TrangThai</option>
                    @if(Model.TrangThai == "Da tiem mui 1")
                    {
                        <option>Da hoan tat</option>
                    }
                    else
                    {
                        <option>Da tiem mui 1</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
